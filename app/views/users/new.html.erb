<h1>Register as a Lender</h1>

<% if flash[:lender_notice] %>
	<p class="success"><%= flash[:lender_notice] %></p>
<% end %>

<% if flash[:lender_errors] %>
	<% flash[:lender_errors].each do |error| %>
		<p class="error"><%= error %></p>
	<% end %>
<% end %>

<form action="/lenders/create" method="post">
	<p>First Name: <input type="text" name="lender[first_name]"></p>
	<p>Last Name: <input type="text" name="lender[last_name]"></p>
	<p>Email: <input type="text" name="lender[email]"></p>
	<p>Password: <input type="password" name="lender[password]"></p>
	<p>Confirm Password: <input type="password" name="lender[password_confirmation]"></p>
	<p>Money: <input type="number" step="100" name="lender[money_amount]"></p>
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p><a href="/sessions/new" data-method="get">Already a Member?</a> <input type="submit" value="Register"></p>
</form>

